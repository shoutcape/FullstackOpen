{
  "env": { "browser": true, "node": true, "es2021": true },

  "plugins": ["react"],

  "extends": ["eslint:recommended", "plugin:react/recommended"],

  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },

  "rules": {
    "semi": ["error", "never"],
    "quotes": ["error", "single"],
    "react/react-in-jsx-scope": "off",
    "react/prop-types": "off"
  }
}
